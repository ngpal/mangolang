    "version": "0.2.0",
    "configurations": [

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'compiler'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=compiler",
                    "--package=compiler"
                ],
                "filter": {
                    "name": "compiler",
                    "kind": "bin"
                }
            },
            "args": ["test.mg"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'compiler'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=compiler",
                    "--package=compiler"
                ],
                "filter": {
                    "name": "compiler",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'vm'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=vm",
                    "--package=vm"
                ],
                "filter": {
                    "name": "vm",
                    "kind": "bin"
                }
            },
            "args": ["--", "test.mbin"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'vm'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=vm",
                    "--package=vm"
                ],
                "filter": {
                    "name": "vm",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}